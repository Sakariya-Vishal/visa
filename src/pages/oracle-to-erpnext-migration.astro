---
import Layout from "../layouts/Layout.astro";
import "../styles.css";
import { Image, Picture } from "@astrojs/image/components";

import oracle_to_erpnext from "../../public/Images/oracle-to-erpnext.svg";

import section_client from "../../public/Images/section-client-oracle.svg";
import ambica_logo from "../../public/Images/ambica-logo.svg";

import high_hardware_cost from "../../public/Images/high_hardware_cost.svg";
import quite_difficult from "../../public/Images/quite_difficult.svg";
import higher_dependence from "../../public/Images/higher_dependence.svg";
import complex_system from "../../public/Images/complex_system.svg";

import lower_upfront from "../../public/Images/lower_upfront.svg";
import customization_capabilities from "../../public/Images/customization_capabilities.svg";
import quite_easy from "../../public/Images/quite_easy.svg";
import control_with_erpnext from "../../public/Images/control_with_erpnext.svg";


import stepone from "../../public/Images/stepone.svg";
import steptwo from "../../public/Images/steptwo.svg";
import stepthree from "../../public/Images/stepthree.svg";
import stepfour from "../../public/Images/stepfour.svg";
import stepfive from "../../public/Images/stepfive.svg";

import oracle_asset_management from "../../public/Images/oracle-asset-management.svg";
