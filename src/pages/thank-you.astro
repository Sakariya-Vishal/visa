---
import Layout from "../layouts/Layout.astro";
import "../styles.css";
import { Image, Picture } from "@astrojs/image/components";
import thankyou_banner from "../../public/Images/thankyou_banner.svg";
import left from "../../public/Images/left.svg";
---

<Layout title="Sanskar Technolabs | Thank You", keyword="", description="", canonical_href="https://sanskartechnolab.com/thank-you">
  <section class="banner-bg">  
  <div
      class="banner-height grid sm:grid-cols-2 md:grid-cols-1 lg:grid-cols-2 md:gap-2 lg:gap-5 items-center mx-5 md:max-w-7xl md:mx-auto md:px-24 2xl:px-0"
    >
      <div class="order-2 lg:order-1 ">    
        <h1
          class="text-[1.75rem] md:text-[3rem] !leading-[2.25rem] md:!leading-[3.5rem] text-[#31393C] font-semibold"
        >
        Thank you for filling out
        the form. <span class="text-[#3E96F4]">We are GLAD!</span>
        </h1>
        <p
          class="text-[#31393C] leading-7 font-normal lg:text-base xl:text-lg mt-5"
        >
        Our team will review your query and reach out to you within 5 business days.
        </p>
        <div
          class="mt-5 flex justify-start bg-[#3E96F4] rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 lg:py-3 md:w-44 sm:w-auto"
        >
        <Image loading="eager"  src={left} width={6} height={12} alt="left arrow " />
        <a href="/" class="text-white text-base font-semibold font-inter ml-5"
          >Back to Home</a
        >
        </div>
      </div>
      
        <Image loading="eager"  src={thankyou_banner} alt="Thank You Banner" class="banner-image w-full order-1 lg:order-2 mx-0 md:mx-5" />
      
    </div>
    </section>
</Layout>

<style>

.banner-image{
	height: h-[calc(100vh-10vh)];
	margin-bottom: 2rem;
}

@media (min-width: 321px){
	.banner-image{
	margin-bottom: 0rem;
}
}
  .banner-height{
	height: h-[calc(100vh-10vh)];
	padding-top: 2rem;
	padding-bottom: 2rem;
}

@media (min-width: 321px){
	.banner-height{
	height: calc(100vh - 10vh);
}
}
</style>