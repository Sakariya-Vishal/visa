    @keyframes colorAnimation {
        0% {
            background-color: #3E96F4;
        }
        100% {
            background-color: white;
        }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-10px);
